{
    "title": "Tempo - Traces Table",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
  
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "label": "Tempo Datasource",
          "query": "tempo",
          "current": {},
          "refresh": 1
        },
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "datasource": "$datasource",
          "query": "labelValues(service.name)",
          "refresh": 2,
          "includeAll": true,
          "multi": false
        }
      ]
    },
  
    "panels": [
      {
        "id": 1,
        "type": "table",
        "title": "Tempo Traces",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 10
        },
        "datasource": "$datasource",
        "targets": [
          {
            "refId": "A",
            "queryType": "traceql",
            "query": "{ service.name =~ \"$service\" }",
            "limit": 50
          }
        ],
        "options": {
          "showHeader": true,
          "cellHeight": "sm"
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        }
      }
    ]
  }
  