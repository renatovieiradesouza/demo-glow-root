{
    "__inputs": [
      {
        "name": "DS_TEMPO",
        "label": "Tempo Datasource",
        "description": "",
        "type": "datasource",
        "pluginId": "tempo",
        "pluginName": "Tempo"
      }
    ],
  
    "title": "Tempo - Traces Table",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
  
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "datasource": "${DS_TEMPO}",
          "query": "labelValues(service.name)",
          "refresh": 2,
          "includeAll": true,
          "multi": false
        }
      ]
    },
  
    "panels": [
      {
        "id": 1,
        "type": "table",
        "title": "Tempo Traces",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
  
        "datasource": "${DS_TEMPO}",
  
        "targets": [
          {
            "refId": "A",
            "queryType": "traceql",
            "query": "{ service.name =~ \"$service\" }",
            "limit": 50
          }
        ],
  
        "options": {
          "showHeader": true,
          "cellHeight": "sm"
        },
  
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        }
      }
    ]
  }
  