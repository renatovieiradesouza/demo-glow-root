{
    "title": "Tempo - Traces Table (Clean)",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
  
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "query": "labelValues(service.name)",
          "refresh": 2,
          "includeAll": true,
          "multi": false
        }
      ]
    },
  
    "panels": [
      {
        "id": 1,
        "type": "table",
        "title": "Traces",
        "gridPos": { "x": 0, "y": 0, "w": 24, "h": 10 },
  
        "targets": [
          {
            "refId": "A",
            "queryType": "traceql",
            "query": "{ service.name =~ \"$service\" }",
            "limit": 50
          }
        ],
  
        "options": {
          "showHeader": true,
          "cellHeight": "sm"
        }
      }
    ]
  }
  